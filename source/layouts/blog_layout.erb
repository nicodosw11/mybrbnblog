<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="icon" href="/images/logo.gif" type="image/gif" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_article.title + ' | ' unless current_article.nil? %>Nicolas Dotto</title>
    <meta name="description" content="<%= current_page.data.description %>">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <meta property="og:site_name" content="Nicolas Dotto London Based Freelance Web Developer"/>
    <meta property="og:title" content="<%= current_article.title %>">
    <meta property="og:description" content="<%= current_article.data.description %>">
    <% if current_article.data.header_image != nil %>
    <meta property="og:image" content="<%= url_for image_path(current_article.data.header_image), :relative => false %>">
    <% end %>

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@nicodosw">
    <meta name="twitter:creator" content="@nicodosw">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
  <%= partial "navbar" %>
    <div id="main" role="main">
      <% if current_article.data.header_image != nil %>
        <div class="header-image">
        <%= image_tag current_article.data.header_image, id: 'header-image' %>
          <% if current_article.data.image_attr != nil %>
            <% link_to current_article.data.image_attr, class: 'image-attr' do %>
              <%= current_article.data.image_attr %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <article>
      <h1><%= current_article.title %></h1>
        <% if current_article.data.subtitle != nil %>
          <p class="subtitle"><%= current_article.data.subtitle %></p>
        <% end %>
      <%= yield %>
    </article>
      <%= javascript_include_tag  "all" %>
  </body>
</html>

