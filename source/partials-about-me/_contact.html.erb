<section class="section-contact" id="contact">
  <div class="row">
    <div class="contact">
      <div class="contact__form">
        <form action="https://formspree.io/connect@nicolasdotto.com" class="form" method="POST" accept-charset="UTF-8">
          <div class="u-margin-bottom-medium">
            <h2 class="heading-secondary">
              Contact me
            </h2>
          </div>
          <div class="form__group" id="details">
            <input type="text" class="form__input" placeholder="Full name" id="name" required autocomplete="off" name="name">
            <label for="name" class="form__label">Full name</label>
          </div>
          <div class="form__group" id="details">
            <input type="email" class="form__input" placeholder="Email address" id="email" required autocomplete="off" name="email">
            <label for="email" class="form__label">Email address</label>
          </div>
          <div class="form__group">
            <div class="form__radio-group">
              <input type="radio" class="form__radio-input" id="web" name="category" value="ruby">
              <label for="web" class="form__radio-label">
                <span class="form__radio-button"></span>
                Python Engineer
              </label>
            </div>
            <div class="form__radio-group">
              <input type="radio" class="form__radio-input" id="data" name="category" value="js">
              <label for="data" class="form__radio-label">
                <span class="form__radio-button"></span>
                Business/Data Analyst
              </label>
            </div>
          </div>
          <div class="form__group">
            <textarea class="form__input" placeholder="Message" id="message" required autocomplete="off" name="message" rows="5" style="resize: none;"></textarea>
            <label for="message" class="form__label">Message</label>
          </div>
          <div class="form__group">
            <button class="btn btn--green btn--scaled btn--scaled--green">Send &rarr;</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
