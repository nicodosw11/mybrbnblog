<section class="section-messages" id="stories">
  <div class="bg-video">
    <video class="bg-video__content" autoplay muted loop>
      <source src="images/Ideas.mp4" type="video/mp4">
      <source src="images/Ideas.webm" type="video/webm">
      Your browser is not supported!
    </video>
  </div>
  <div class="u-center-text u-margin-bottom-large">
    <h2 class="heading-secondary">
      Why programming?
    </h2>
  </div>
  <% blog.articles[0...2].each do |article| %>
  <div class="row">
    <div class="story">
      <figure class="story__shape">
        <!-- <img src="/images/jscode.jpg" alt="" class="story__image"> -->
        <%= image_tag article.data.header_image, class: "story__image" %>
        <figcaption class="story__caption"><%= article.data['category'] %></figcaption>
      </figure>
      <div class="story__text">
        <h3 class="heading-tertiary u-margin-bottom-small"><%= link_to article.title, article %></h3>
        <p style="min-height: 8.1rem;"><%= article.data['summary'] %>
          <!-- Lorem ipsum dolor sit, amet consectetur adipisicing elit. Recusandae velit, expedita iure sed dolores quia
          illo quam
          molestias! Minima ad aliquam ea eum explicabo obcaecati dolore earum et neque ut? -->
        </p>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="story">
      <figure class="story__shape">
        <img src="/images/python.jpg" alt="" class="story__image">
        <figcaption class="story__caption">Data science!</figcaption>
      </figure>
      <div class="story__text">
        <h3 class="heading-tertiary u-margin-bottom-small">This is another good title</h3>
        <p>
          Lorem ipsum dolor sit, amet consectetur adipisicing elit. Recusandae velit, expedita iure sed dolores quia
          illo
          quam
          molestias! Minima ad aliquam ea eum explicabo obcaecati dolore earum et neque ut?
        </p>
      </div>
    </div>
  </div>
  <div class="u-center-text u-margin-top-xlarge">
    <a href="/articles" class="btn-text">Read more stories &rarr;</a>
  </div>
</section>
