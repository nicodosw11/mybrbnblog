<section class="section-articles" id="articles">
  <% page_articles.each do |article| %>
  <div class="article-container">
    <div class="article-box">
      <div class="article-text">
        <cite><%= link_to article.title, article %></cite>
        <% if article.data['summary'] != nil %>
        <p class="article-summary" style="margin: 3rem 0 2rem"><%= article.data['summary'] %></p>
        <% end %>
        <small>
          <i class="icon-ruby"></i><%= article.data['category'] %>
          <i class="icon-ethereum"></i><time><%=time_ago_in_words(article.date)%> ago</time>
          <i class="icon-python"></i><a href="#" class="hide-m" data-disqus-url="#" data-disqus-identifier=""><%= article.tags.size %></a>
        </small>
        <div class="tag-labels" style="margin-top: 1rem;">
          <small><i class="icon-ruby"></i>
          <% article.tags.each do |tag| %>
            <%= link_to tag, tag_path(tag), class: "tag-label" %>
          <% end %>
          </small>
        </div>
      </div>
      <div class="article-image hide-t"><% if article.data.header_image %><%= image_tag article.data.header_image, width: "585", height: "340"%><% end %></div>
      <%= link_to "Read now", article, class: "btn" %>
    </div>
  </div>
  <% end %>
</section>
