<% if paginate && num_pages > 1 %>
  <div class="pagination">
    <ul>
      <% if prev_page %>
      <li class="page-prev"><%= link_to '<i class="fa fa-long-arrow-left"></i>', prev_page %></li>
      <% else %>
      <li> </li>
      <% end %>
      <li>
        <ul>
          <% for p in 1..num_pages %>
            <% if p == page_number %>
            <li><%= p %></li>

            <% elsif p == 1 %>

              <% if I18n.locale == I18n.default_locale %>
                <li><%= link_to p, "/blog" %></li>
              <% else %>
                <li><%= link_to p, "/fr/blog" %></li>
              <% end %>

            <% else %>

              <% if I18n.locale == I18n.default_locale %>
                <li><%= link_to p, "/blog/page/#{p}" %></li>
              <% else %>
                <li><%= link_to p, "/fr/blog/page/#{p}" %></li>
              <% end %>

            <% end %>
          <% end %>
        </ul>
      </li>
      <% if next_page %>
      <li class="page-next"><%= link_to '<i class="fa fa-long-arrow-right"></i>', next_page %></li>
      <% else %>
      <li> </li>
      <% end %>
    </ul>
  </div>
<% end %>
